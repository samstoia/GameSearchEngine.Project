@using GameSearchEngine.Models;

@{
    Layout = "_Layout";
}
<div class="page-body">
    <h1>List of games by their Rating:</h1>
    <div class="scrollable">
        <ul>
            @foreach (var game in Model)
            {
                <li><a href='/rating/@game.GetId()'>@game.GetRating()/5 - @game.GetTitle()</a></li>
            }
        </ul>
    </div>
</div>