@using GameSearchEngine.Models;

@{
    Layout = "_Layout";
}

<div class="page-body">
    @if (@Model.Count == 0)
    {
        <h3>Your search returned no results!</h3>
    }
    @if (Model.Count != 0)
    {
        <h1>Search results:</h1>
        
        <ul>
        @foreach (var game in Model)
        {
            <li><a href='/releasedate/@game.GetId()'>@game.GetYear() - @game.GetTitle() </a></li>
        }
        </ul>
    }
<h4><a href="/search">Return home</a></h4>
</div>